services:
  sonarr:
    image: linuxserver/sonarr
    container_name: sonarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/London
      - UMASK_SET=022
    volumes:
      - {{sonarr_config_dir}}:/config
      - {{ media_base_dir }}/Downloading:/Downloads
      - {{ media_base_dir }}/Shows:/Shows
      - {{ media_base_dir }}/Anime:/Anime
    ports:
      - 8989:8989
    restart: unless-stopped