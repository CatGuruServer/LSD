services:
  prowlarr:
    image: linuxserver/prowlarr
    container_name: prowlarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/London
      - UMASK_SET=022
    volumes:
      - {{ prowlarr_config_dir }}:/config
      - {{ media_base_dir }}/Downloading:/Downloads
      - {{ media_base_dir }}/Shows:/Shows
      - {{ media_base_dir }}/Anime:/Anime
    ports:
      - 9696:9696
    restart: unless-stopped