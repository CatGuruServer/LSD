version: '3.8'
services:
  bazarr:
    image: linuxserver/bazarr
    container_name: bazarr
    restart: unless-stopped
    volumes:
      - {{ bazarr_config_dir }}:/config
      - {{ bazarr_data_dir }}:/data
    ports:
      - "6767:6767"
    environment:
      - TZ={{ timezone }}      # Timezone for the container, dynamically set using the 'timezone' variable
      - BAZARR__AUTH__APIKEY={{ lookup('file', './api/bazarr_api.key') }}  # API key for Radarr, read from a local file
